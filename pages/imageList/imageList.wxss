/* 顶部部分 */
.top{
    width: 100%;
    height: 90rpx;
    text-align: center;
    margin-bottom: 50rpx;
    background-color: #FFFFFF;
}
.top p{
    display: inline-block;
    width: 120rpx;
    line-height: 90rpx;
    text-align: center;
    margin: 0 10rpx;
}
.top p.selected {
    border-bottom: 2px solid blue;
  }
  
/* 视频部分 */
.imageList {
    width: 100%;
    height: auto;
    text-align: center;
    border-radius: 20rpx;
}
.imageList .box{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}
.imageList image{
    margin: 5rpx;
    width: 350rpx;
}

.imageList .copy {
    display: inline-block;
    width: 300rpx;
    font-size: 32rpx;
    font-weight: 500;
    margin-right: 10rpx;
}

.imageList .downLoad {
    display: inline-block;
    width: 300rpx;
    font-size: 32rpx;
    font-weight: 500;
    margin-left: 10rpx;
    background-color: rgb(83, 155, 238);
}
.imageList .downLoad button{
    margin-top: 30rpx;
}



/* 封面部分 */
.cover{
    width: 100%;
    height: 800rpx;
    text-align: center;
    border-top: 1rpx solid #dfdfdf;
}
.cover image{
    width: 600rpx;
    height: 700rpx;
    margin-top: 20rpx;
}
.cover .downloadImage{
    display: inline-block;
    width: 300rpx;
    font-size: 32rpx;
    font-weight: 500;
    background-color: rgb(83, 155, 238);
}




